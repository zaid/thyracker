!!! 5
%html
%head
  %title= title
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  .container
    = render 'layouts/header'

    #content
      - flash.each do |key, value|
        %div{:class => "flash #{key}"}= value

      = yield

  = render 'layouts/footer'
